    <div class="container">
        <h2 class="to"> ToDo List App </h2>
        <div class="position-relative">
            
          <form action="/addtask" method="POST" >
            <input type="text" name="newtask" placeholder="Add a New Task"> <button formaction="/addtask" class="btn btn-success btn-sm" type="submit">Add a Task</button>
            
            <h2> Added Task </h2>
            <% for( var i=0; i < task.length; i++){ %>
                <li><input type="checkbox" name="check" value="<%= task[i] %>" />
                    <%= task[i] %>
                </li>
                <% } %>
                <br>
                <button formaction="/removetask" class="btn btn-danger" type="submit">Delete <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg></button>
          </form>
        </div>  
        
        <h2> Completed task </h2>
        <% for(var i=0; i < complete.length; i++){ %>
            <li><input type="checkbox" checked>
                <%= complete[i] %>
            </li>
            <% } %>
            <div class = "logout">
                <button type="button" class="btn btn-warning" onclick="LogOut()">LogOut</button>
            </div>
     </div>
</div>  
    
    <div class = "sawo">
     <div id="sawo-container" style="height: 350px; width: 320px;" class = "text-center">TODO APP</div>
     <script src="http://websdk.sawolabs.com/sawo.min.js"></script> 
     <script>
      var config = {
        // should be same as the id of the container created on 3rd step
        containerID: "sawo-container",
        // can be one of 'email' or 'phone_number_sms'
        identifierType: "email",
        // Add the API key copied from 2nd step
        apiKey: "5cf04e76-dba4-4b41-a0ec-30cb642102f8",
        // Add a callback here to handle the payload sent by sdk
        onSuccess: (payload) => {
            localStorage.setItem("payload", JSON.stringify(payload))
            window.location.reload()
        },
     };
     var sawo = new Sawo(config);
     sawo.showForm();

     const sawoContainer = document.getElementById("sawo-container") 
     if(localStorage.getItem("payload")){
        sawoContainer.style.display = "none";
     }

     else{
         document.querySelector(".container").style.display = "none"
     }

     function LogOut(){
         localStorage.clear()
         window.location.reload()
     }
     </script>
    </div>
</div>

</body>

